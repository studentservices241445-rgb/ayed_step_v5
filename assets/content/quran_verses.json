{
  "verses": [
    {
      "id": "V-001",
      "text": "﴿ وَقُل رَّبِّ زِدْنِي عِلْمًا ﴾",
      "surah_name": "طه",
      "surah_no": 20,
      "ayah_no": 114,
      "themes": [
        "علم",
        "طلب_العلم"
      ]
    },
    {
      "id": "V-002",
      "text": "﴿ إِنَّ مَعَ الْعُسْرِ يُسْرًا ﴾",
      "surah_name": "الشرح",
      "surah_no": 94,
      "ayah_no": 6,
      "themes": [
        "تفاؤل",
        "صبر"
      ]
    },
    {
      "id": "V-003",
      "text": "﴿ فَإِذَا عَزَمْتَ فَتَوَكَّلْ عَلَى اللَّهِ ﴾",
      "surah_name": "آل عمران",
      "surah_no": 3,
      "ayah_no": 159,
      "themes": [
        "توكل",
        "عزم"
      ]
    },
    {
      "id": "V-004",
      "text": "﴿ وَتَعَاوَنُوا عَلَى الْبِرِّ وَالتَّقْوَى ﴾",
      "surah_name": "المائدة",
      "surah_no": 5,
      "ayah_no": 2,
      "themes": [
        "تعاون",
        "مجتمع"
      ]
    },
    {
      "id": "V-005",
      "text": "﴿ وَقُلِ اعْمَلُوا فَسَيَرَى اللَّهُ عَمَلَكُمْ ﴾",
      "surah_name": "التوبة",
      "surah_no": 9,
      "ayah_no": 105,
      "themes": [
        "عمل",
        "جد"
      ]
    },
    {
      "id": "V-006",
      "text": "﴿ يَا أَيُّهَا الَّذِينَ آمَنُوا اسْتَعِينُوا بِالصَّبْرِ وَالصَّلَاةِ ۚ إِنَّ اللَّهَ مَعَ الصَّابِرِينَ ﴾",
      "surah_name": "البقرة",
      "surah_no": 2,
      "ayah_no": 153,
      "themes": [
        "صبر",
        "ثبات"
      ]
    },
    {
      "id": "V-007",
      "text": "﴿ وَاسْتَعِينُوا بِالصَّبْرِ وَالصَّلَاةِ ﴾",
      "surah_name": "البقرة",
      "surah_no": 2,
      "ayah_no": 45,
      "themes": [
        "استعانة",
        "ثبات"
      ]
    },
    {
      "id": "V-008",
      "text": "﴿ وَمَا تَوْفِيقِي إِلَّا بِاللَّهِ ﴾",
      "surah_name": "هود",
      "surah_no": 11,
      "ayah_no": 88,
      "themes": [
        "توفيق",
        "توكل"
      ]
    },
    {
      "id": "V-009",
      "text": "﴿ وَالَّذِينَ جَاهَدُوا فِينَا لَنَهْدِيَنَّهُمْ سُبُلَنَا ﴾",
      "surah_name": "العنكبوت",
      "surah_no": 29,
      "ayah_no": 69,
      "themes": [
        "اجتهاد",
        "هداية"
      ]
    },
    {
      "id": "V-010",
      "text": "﴿ يَرْفَعِ اللَّهُ الَّذِينَ آمَنُوا مِنكُمْ وَالَّذِينَ أُوتُوا الْعِلْمَ دَرَجَاتٍ ﴾",
      "surah_name": "المجادلة",
      "surah_no": 58,
      "ayah_no": 11,
      "themes": [
        "علم",
        "رفعة"
      ]
    },
    {
      "id": "V-011",
      "text": "﴿ قُلْ هَلْ يَسْتَوِي الَّذِينَ يَعْلَمُونَ وَالَّذِينَ لَا يَعْلَمُونَ ﴾",
      "surah_name": "الزمر",
      "surah_no": 39,
      "ayah_no": 9,
      "themes": [
        "علم",
        "تميّز"
      ]
    },
    {
      "id": "V-012",
      "text": "﴿ إِنَّهُ مَن يَتَّقِ وَيَصْبِرْ فَإِنَّ اللَّهَ لَا يُضِيعُ أَجْرَ الْمُحْسِنِينَ ﴾",
      "surah_name": "يوسف",
      "surah_no": 12,
      "ayah_no": 90,
      "themes": [
        "صبر",
        "إحسان"
      ]
    },
    {
      "id": "V-013",
      "text": "﴿ وَأَنْ لَيْسَ لِلْإِنسَانِ إِلَّا مَا سَعَى ﴾",
      "surah_name": "النجم",
      "surah_no": 53,
      "ayah_no": 39,
      "themes": [
        "عمل",
        "اجتهاد"
      ]
    },
    {
      "id": "V-014",
      "text": "﴿ فَاذْكُرُونِي أَذْكُرْكُمْ ﴾",
      "surah_name": "البقرة",
      "surah_no": 2,
      "ayah_no": 152,
      "themes": [
        "ذكر",
        "شكر"
      ]
    },
    {
      "id": "V-015",
      "text": "﴿ رَبِّ اشْرَحْ لِي صَدْرِي ﴾",
      "surah_name": "طه",
      "surah_no": 20,
      "ayah_no": 25,
      "themes": [
        "دعاء",
        "تيسير"
      ]
    },
    {
      "id": "V-016",
      "text": "﴿ وَمَن يَتَّقِ اللَّهَ يَجْعَل لَّهُ مَخْرَجًا ﴾",
      "surah_name": "الطلاق",
      "surah_no": 65,
      "ayah_no": 2,
      "themes": [
        "تقوى",
        "فرج"
      ]
    },
    {
      "id": "V-017",
      "text": "﴿ وَمَن يَتَوَكَّلْ عَلَى اللَّهِ فَهُوَ حَسْبُهُ ﴾",
      "surah_name": "الطلاق",
      "surah_no": 65,
      "ayah_no": 3,
      "themes": [
        "توكل",
        "طمأنينة"
      ]
    },
    {
      "id": "V-018",
      "text": "﴿ وَقُل رَّبِّ أَدْخِلْنِي مُدْخَلَ صِدْقٍ وَأَخْرِجْنِي مُخْرَجَ صِدْقٍ ﴾",
      "surah_name": "الإسراء",
      "surah_no": 17,
      "ayah_no": 80,
      "themes": [
        "صدق",
        "توفيق"
      ]
    }
  ]
}