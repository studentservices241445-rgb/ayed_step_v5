{
  "hadith": [
    {
      "id": "H-001",
      "text": "«مَن سَلَكَ طريقًا يلتمسُ فيه علمًا سهَّلَ اللهُ له به طريقًا إلى الجنَّة»",
      "source": "مسلم",
      "themes": [
        "علم",
        "طلب_العلم"
      ]
    },
    {
      "id": "H-002",
      "text": "«احرِصْ على ما ينفعُك، واستعِنْ باللهِ ولا تعجِزْ»",
      "source": "مسلم",
      "themes": [
        "همة",
        "استمرارية"
      ]
    },
    {
      "id": "H-003",
      "text": "«إنما الأعمالُ بالنيّات»",
      "source": "البخاري ومسلم",
      "themes": [
        "نية",
        "إتقان"
      ]
    },
    {
      "id": "H-004",
      "text": "«الدالُّ على الخيرِ كفاعِلِه»",
      "source": "الترمذي",
      "themes": [
        "مشاركة",
        "نفع"
      ]
    },
    {
      "id": "H-005",
      "text": "«إذا سألتم اللهَ فاسألوهُ الفردوسَ»",
      "source": "البخاري",
      "themes": [
        "همة",
        "دعاء"
      ]
    },
    {
      "id": "H-006",
      "text": "«يَسِّروا ولا تُعسِّروا، وبشِّروا ولا تُنفِّروا»",
      "source": "البخاري ومسلم",
      "themes": [
        "تيسير",
        "تشجيع"
      ]
    },
    {
      "id": "H-007",
      "text": "«من لا يشكر الناس لا يشكر الله»",
      "source": "أحمد",
      "themes": [
        "شكر",
        "امتنان"
      ]
    },
    {
      "id": "H-008",
      "text": "«أحبُّ الأعمالِ إلى اللهِ أدومُها وإن قلَّ»",
      "source": "البخاري ومسلم",
      "themes": [
        "استمرارية",
        "عادات"
      ]
    },
    {
      "id": "H-009",
      "text": "«استقيموا ولن تُحصوا»",
      "source": "مسلم",
      "themes": [
        "ثبات",
        "انضباط"
      ]
    },
    {
      "id": "H-010",
      "text": "«كُلُّكم راعٍ وكُلُّكم مسؤولٌ عن رعيَّتِه»",
      "source": "البخاري ومسلم",
      "themes": [
        "مسؤولية",
        "التزام"
      ]
    },
    {
      "id": "H-011",
      "text": "«نعمتانِ مغبونٌ فيهما كثيرٌ من الناس: الصحَّةُ والفراغُ»",
      "source": "البخاري",
      "themes": [
        "وقت",
        "صحة"
      ]
    },
    {
      "id": "H-012",
      "text": "«الْمُؤْمِنُ القَوِيُّ خَيْرٌ وأَحَبُّ إلى اللَّهِ مِنَ الْمُؤْمِنِ الضَّعِيفِ»",
      "source": "مسلم",
      "themes": [
        "قوة",
        "همة"
      ]
    }
  ]
}